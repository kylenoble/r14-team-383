<!DOCTYPE html>
<html>
<head>
  <title>ReNBA</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="row">
  <nav class="navbar navbar-fixed-top navbar-inverse" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">reNBA</a>
      </div>
      <form class="navbar-form navbar-right" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default red">Search</button>
      </form>
    </div>
  </nav>
</div>

<div id="carousel-example-generic" class="carousel slide" data-ride="carousel" data-wrap="true">
  <div class="overlay"></div>
  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active" id="jordan"></div>
    <div class="item" id="durant"></div>
    <div class="item" id="kobe"></div>
    <div class="item" id="lebron"></div>
  </div>
  <div class="carousel-content">
    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <h1>Watch NBA Games, ANYTIME</h1>
          <form role="search">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Search">
              <button type="submit" class="btn btn-default red">Search</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div> <!-- Carousel -->



<div class="container videos">
  <div class="row">
    <div class="col-md-2">
      <%= render partial: 'games/left' %>
    </div>
    <div class="col-md-8">
      <%= yield %>
    </div>
    <div class="col-md-2">
      <%= render partial: 'games/right' %>
    </div>
  </div>
  <div class="row">
    <%= render partial: 'games/stats' %>
  </div>
</div>
<script type="text/javascript">



</script>
</body>
</html>
